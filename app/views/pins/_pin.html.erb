<div class="box">
	<%= link_to (image_tag pin.image (:medium)), pin %>
  <p>
  <%= pin.description %>
  </p>
  <p>
  	<strong>posted by <%= pin.user.email %></strong>
  </p>
  <% if current_user == pin.user %>
  	<p>
<%= link_to 'Edit', edit_pin_path(pin) %>
  	<%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you for certain?' } %>
  	</p>
  	
<% end %>
</div>